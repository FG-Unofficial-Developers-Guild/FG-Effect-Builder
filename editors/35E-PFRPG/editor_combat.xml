<?xml version="1.0" encoding="iso-8859-1"?>

<root>
    <!-- individual effect editors -->
    <includefile source="editors/35E-PFRPG/effect/editor_AC.xml" />
    <includefile source="editors/35E-PFRPG/effect/editor_ATK.xml" />
    <includefile source="editors/35E-PFRPG/effect/editor_DMG.xml" />
    <includefile source="editors/35E-PFRPG/effect/editor_INIT.xml" />
    <!-- combat effects bundle editor -->
    <windowclass name="editor_combat">
        <script file="editors/35E-PFRPG/scripts/editor_combat.lua" />
        <margin control="0,0,0,2" />
        <sizelimits>
            <minimum height="25" />
        </sizelimits>
        <sheetdata>
            <genericcontrol name="leftanchor">
                <anchored width="0" height="0">
                    <top />
                    <left />
                </anchored>
                <invisible />
            </genericcontrol>

            <stringcycler_effects name="effect">
                <anchored width="100" height="20">
                    <top offset="2" />
                    <left parent="leftanchor" anchor="right" relation="relative" offset="5" />
                </anchored>
                <parameters>
                    <defaultlabelres mergerule="replace">ac</defaultlabelres>
                    <defaultvalue>AC</defaultvalue>
                    <labelsres>atk|dmg|init_eb</labelsres>
                    <values>ATK|DMG|INIT</values>
                </parameters>
                <script>
                    function onValueChanged()
                        window.updateEffectEditor()
                        super.onValueChanged()
                    end
                </script>
            </stringcycler_effects>

            <subwindow_effect_editor name="effect_editor">
                <!-- <frame name="border" /> -->
            </subwindow_effect_editor>
        </sheetdata>
    </windowclass>
</root>
