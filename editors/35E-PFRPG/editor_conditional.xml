<?xml version="1.0" encoding="iso-8859-1"?>

<root>
    <!-- individual effect editors -->
    <includefile source="editors/35E-PFRPG/conditional/conditional_CONDITION.xml" />
    <includefile source="editors/35E-PFRPG/conditional/conditional_ALIGN.xml" />
    <includefile source="editors/35E-PFRPG/conditional/conditional_SIZE.xml" />
    <includefile source="editors/35E-PFRPG/conditional/conditional_TYPE.xml" />
    <includefile source="editors/35E-PFRPG/conditional/conditional_HEALTH.xml" />
    <includefile source="editors/35E-PFRPG/conditional/conditional_CUSTOM.xml" />

    <windowclass name="editor_conditional">
        <script file="editors/35E-PFRPG/scripts/editor_conditional.lua" />
		<margins control="0,0,0,2" />
        <sheetdata>
            <leftanchor />

            <stringcycler_effect name="effect">
                <anchored width="60" />
                <parameters>
                    <defaultlabelres mergerule="replace">if</defaultlabelres>
                    <defaultvalue>IF</defaultvalue>
                    <labelsres>ift</labelsres>
                    <values>IFT</values>
                </parameters>
            </stringcycler_effect>

            <cycler_effect_subwindow name="conditional">
                <parameters>
                    <defaultlabelres mergerule="replace">condition</defaultlabelres>
                    <defaultvalue>conditional_CONDITION</defaultvalue>
                    <labelsres>alignment|size|type|health|custom</labelsres>
                    <values>conditional_ALIGN|conditional_SIZE|conditional_TYPE|conditional_HEALTH|conditional_CUSTOM</values>
                </parameters>
            </cycler_effect_subwindow>

            <subwindow_effect_editor>
                <script>
                    function onInit()
                        window.conditional.updateEffectEditor()
                    end
                </script>
            </subwindow_effect_editor>
        </sheetdata>
    </windowclass>
</root>
