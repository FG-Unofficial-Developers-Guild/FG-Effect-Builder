<?xml version="1.0" encoding="iso-8859-1"?>

<root>
    <windowclass name="editor_DMG">
        <script file="editors/35E-PFRPG/effect/scripts/editor_DMG.lua" />
        <sizelimits>
            <minimum height="25" />
        </sizelimits>
        <sheetdata>
            <genericcontrol name="leftanchor">
                <anchored width="0" height="0">
                    <top />
                    <left />
                </anchored>
                <invisible />
            </genericcontrol>

            <dice_effect name="effect_dice">
                <anchored width="60" height="20">
                    <top offset="2" />
                    <left parent="leftanchor" anchor="right" relation="relative" offset="10" />
                </anchored>
            </dice_effect>

			<label name="label_plus">
                <anchored height="20">
                    <top offset="2" />
                    <left parent="leftanchor" anchor="right" relation="relative" offset="5" />
                </anchored>
				<static>+</static>
			</label>

            <effect_number name="effect_modifier">
                <anchored width="20" height="20">
                    <top offset="2" />
                    <left parent="leftanchor" anchor="right" relation="relative" offset="5" />
                </anchored>
            </effect_number>

            <combobox_bonus_types name="effect_bonus_type">
                <anchored width="100" height="20">
                    <top offset="2" />
                    <left parent="leftanchor" anchor="right" relation="relative" offset="10" />
                </anchored>
            </combobox_bonus_types>
        </sheetdata>
    </windowclass>
</root>
