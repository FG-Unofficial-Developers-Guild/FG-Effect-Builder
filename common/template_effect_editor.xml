<?xml version="1.0" encoding="iso-8859-1"?>

<root>
    <template name="leftanchor">
        <genericcontrol name="leftanchor">
            <anchored width="0" height="0">
                <top />
                <left />
            </anchored>
            <invisible />
            <disabled />
        </genericcontrol>
    </template>
    <template name="rightanchor">
        <genericcontrol name="rightanchor">
            <anchored width="0" height="0">
                <top />
                <right />
            </anchored>
            <invisible />
            <disabled />
        </genericcontrol>
    </template>

    <template name="button_stringcycler_defaultable">
        <button_stringcycler>
            <script file="common/scripts/button_stringcycler_defaultable.lua" />
        </button_stringcycler>
    </template>

    <template name="stringcycler_effects">
        <button_stringcycler_defaultable>
            <anchored width="100" height="20">
                <top offset="2" />
                <left parent="leftanchor" anchor="right" relation="relative" offset="10" />
            </anchored>
            <sourceless />
            <script file="common/scripts/valueholder_effect_editor.lua" />
        </button_stringcycler_defaultable>
    </template>

    <template name="combobox_effects">
        <combobox>
            <anchored width="100" height="20">
                <top offset="3" />
                <left parent="leftanchor" anchor="right" relation="relative" offset="10" />
            </anchored>
            <sourceless />
            <script file="common/scripts/valueholder_effect_editor.lua" />
        </combobox>
    </template>

    <template name="effect_number">
        <basicnumber>
            <anchored width="20" height="20">
                <top offset="2" />
                <left parent="leftanchor" anchor="right" relation="relative" offset="10" />
            </anchored>
            <default>0</default>
            <hideonvalue>0</hideonvalue>
            <sourceless />
            <script file="common/scripts/valueholder_effect_editor.lua" />
        </basicnumber>
    </template>

    <template name="dice_effect">
        <basicdice>
            <anchored width="60" height="20">
                <top offset="2" />
                <left parent="leftanchor" anchor="right" relation="relative" offset="10" />
            </anchored>
            <sourceless />
            <script file="common/scripts/valueholder_effect_editor.lua" />
        </basicdice>
    </template>

    <template name="priority_number">
        <basicnumber>
            <anchored width="15" height="20">
                <top offset="2" />
                <left parent="leftanchor" anchor="right" relation="relative" offset="10" />
            </anchored>
            <default>0</default>
            <sourceless />
            <script>
                function onValueChanged()
                    window.windowlist.applySort()
                end
            </script>
        </basicnumber>
    </template>

    <template name="combobox_damage_types">
        <combobox_effects>
            <listdirection>down</listdirection>
            <script>
                function onInit()
                    super.onInit();
                    addItems(DataCommon.dmgtypes);
                end
            </script>
            <listmaxsize>5</listmaxsize>
        </combobox_effects>
    </template>

    <template name="combobox_bonus_types">
        <combobox_effects>
            <listdirection>down</listdirection>
            <script>
                function onInit()
                    super.onInit();
                    add("");
                    addItems(DataCommon.bonustypes);
                end
            </script>
            <listmaxsize>5</listmaxsize>
        </combobox_effects>
    </template>

    <template name="cycler_effect_type">
        <button_stringcycler_defaultable>
            <anchored width="100" height="20">
                <top offset="2" />
                <left parent="leftanchor" anchor="right" relation="relative" offset="10" />
            </anchored>
            <sourceless />
            <script>
                function onValueChanged()
                    window.updateEffectEditor()
                end
            </script>
        </button_stringcycler_defaultable>
    </template>

    <template name="subwindow_effect_editor">
        <subwindow>
            <anchored>
                <top />
                <left parent="leftanchor" anchor="right" relation="relative" offset="0" />
                <right />
            </anchored>
            <activate />
            <fastinit />
            <script file="common/scripts/subwindow_effect_editor.lua" />
        </subwindow>
    </template>
</root>