<?xml version="1.0" encoding="iso-8859-1"?>

<root>
    <template name="button_stringcycler_defaultable">
        <button_stringcycler>
            <script file="common/scripts/button_stringcycler_defaultable.lua" />
        </button_stringcycler>
    </template>

    <template name="stringcycler_effects">
        <button_stringcycler_defaultable>
            <anchored width="100" height="20">
                <top offset="2" />
                <left parent="leftanchor" anchor="right" relation="relative" offset="10" />
            </anchored>
            <sourceless />
            <script file="common/scripts/valueholder_effect_editor.lua" />
        </button_stringcycler_defaultable>
    </template>

    <template name="stringcycler_effects_subwindow">
        <stringcycler_effects>
            <script file="common/scripts/valueholder_effect_editor.lua" />
        </stringcycler_effects>
    </template>

    <template name="cycler_range">
        <stringcycler_effects name="effect_range">
            <parameters>
                <defaultlabelres mergerule="replace">allrange</defaultlabelres>
                <labelsres>melee|ranged</labelsres>
                <values>melee|ranged</values>
            </parameters>
        </stringcycler_effects>
    </template>

    <template name="cycler_effect_type">
        <button_stringcycler_defaultable>
            <anchored width="100" height="20">
                <top offset="2" />
                <left parent="leftanchor" anchor="right" relation="relative" offset="10" />
            </anchored>
            <sourceless />
            <script>
                function onValueChanged()
                    window.updateEffectEditor()
                end
            </script>
        </button_stringcycler_defaultable>
    </template>
</root>