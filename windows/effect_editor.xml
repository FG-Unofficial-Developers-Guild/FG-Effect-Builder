<?xml version="1.0" encoding="iso-8859-1"?>

<root>
    <windowclass name="effect_editor">
        <frame>recordsheet</frame>
        <placement>
            <size width="460" height="370" />
        </placement>
        <sizelimits>
            <minimum width="460" height="370" />
            <dynamic />
        </sizelimits>
        <nodelete />
        <playercontrol />
        <tooltip control="name" />
        <sheetdata>
            <windowtitlebar name="title">
                <resource>power_title_effect</resource>
            </windowtitlebar>

            <frame_effects name="contentframe" />

            <subwindow_record name="main">
                <class>effect_editor_main</class>
                <activate />
                <fastinit />
            </subwindow_record>

            <scrollbar_record>
                <target>main</target>
            </scrollbar_record>

            <resize_recordsheet />
            <close_recordsheet />
        </sheetdata>
    </windowclass>
    <windowclass name="effect_editor_main">
        <script file="windows/scripts/effect_editor.lua" />
        <sheetdata>
            <anchor_column name="columnanchor" />

            <!-- effect type cycler -->
            <label_column name="type_label">
                <static textres="power_label_type" />
                <tooltip textres="power_label_type_tooltip" />
            </label_column>

            <button_stringcycler_defaultable name="effect_type">
                <anchored>
                    <top parent="columnanchor" anchor="bottom" relation="relative" offset="7" />
                    <left offset="97" />
                    <right offset="-110" />
                </anchored>
                <parameters>
                    <defaultlabelres mergerule="replace">ability</defaultlabelres>
                    <defaultvalue>ability_editor</defaultvalue>
                    <labelsres>save|susceptiblity|misc</labelsres>
                    <values>save_editor|susceptiblity_editor|misc_editor</values>
                </parameters>
                <sourceless />
                <script>
                    function onValueChanged()
                        window.updateEffectType()
                    end
                </script>
            </button_stringcycler_defaultable>

            <subwindow name="effect_type_editor">
                <anchored>
                    <top parent="type_label" anchor="bottom" offset="15" />
                    <left offset="35" />
                    <right offset="-35" />
                    <bottom offset="-32" />
                </anchored>
                <class>ability_editor</class>
                <activate />
                <fastinit />
            </subwindow>
        </sheetdata>
    </windowclass>
</root>
