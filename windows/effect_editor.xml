<?xml version="1.0" encoding="iso-8859-1"?>

<root>
    <windowclass name="effect_editor">
        <!-- <frame name="border" /> -->
        <script file="windows/scripts/effect_editor.lua" />
		<margins control="0,0,0,2" />
        <sheetdata>
            <leftanchor />
            <rightanchor />

            <priority_number name="effect_priority">
                <anchored>
                    <left offset="5" />
                </anchored>
            </priority_number>

            <cycler_active_effect_type name="effect_type" />

            <!-- delete button if in edit mode -->
            <button_idelete name="idelete">
				<anchored width="20" height="20">
					<top offset="2" />
					<right parent="rightanchor" anchor="left" relation="relative" offset="-2" />
				</anchored>
			</button_idelete>

            <!-- Effect Specific editor -->
            <subwindow_effect_category name="effect_type_editor">
                <!-- <frame name="border" /> -->
                <anchored>
                    <right parent="rightanchor" anchor="left" relation="relative" offset="-5" />
                </anchored>
            </subwindow_effect_category>

            <!-- Effect String holder -->
            <hs name="effect_description">
                <script>
                    function onValueChanged()
                        window.windowlist.window.updateEffectString()
                    end
                </script>
            </hs>
        </sheetdata>
    </windowclass>
</root>